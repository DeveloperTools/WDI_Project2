<script src="/script/draft.js"></script>
<link rel="stylesheet" href="/style/draft.css">

<div id="page_header">
  <div id="container_logo">
    <img src="/img/logo_large.png" alt="" />
  </div>
</div>

<div class="container">
  <h1>Draft for <%= session[:current_league] %></h1>
  <div class="row">
    <form class="draft" action="/draft/" method="post">
      <input type="text" name="team_name" placeholder="Team Name">
      <input type="hidden" name="account_name" value="<%=@account.account_name%>">
      <input type="hidden" name="league_name" value="<%=session[:current_league]%>">
      <input type="submit" name="name" value="Start Draft">
    </form>

  </div>
</div>
